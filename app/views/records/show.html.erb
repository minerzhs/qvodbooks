<%- model_class = Record -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name of the Book</strong></dt>
  <dd><%= Book.find(@record.book_id).name %></dd>
  <dt>ID of the<strong><%= model_class.human_attribute_name(:book_id) %>:</strong></dt>
  <dd><%= @record.book_id %></dd>
  <dt><strong>Address of the User</strong></dt>
  <dd><%= User.find(@record.user_id).email %></dd>  
  <dt><strong>ID of the<%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @record.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:check_out_date) %>:</strong></dt>
  <dd><%= @record.check_out_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:check_in_date) %>:</strong></dt>
  <dd><%= @record.check_in_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              records_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_record_path(@record), :class => 'btn' %>
</div>
