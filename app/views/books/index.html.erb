<h1>This is the book list for the library.</h1>

<%= link_to 'Recommend a new book', new_book_path %>
<br>
<br>
<table>
  <tr>
    <th>ISBN</th>
    <th>Name</th>
    <th>Author</th>
    <th>Recommended By</th>
    <th>Status</th>
    <th>Date of Registered</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.name %></td>
    <td><%= book.author %></td>
    <td><%= book.recommended_by %></td>
    <td><%= book.status %></td>
    <td><%= book.arrive_date %></td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>